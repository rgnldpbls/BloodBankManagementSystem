@model BBMS.ViewModels.LoginVM

@{
    ViewData["Title"] = "Physician Login";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" />
</head>
<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    <form style="width: 23rem;" asp-action="Login" method="post">
                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Physician Login</h3>
                        <div data-mdb-input-init class="form-outline mb-4">
                            <label class="form-label" asp-for="Email"></label>
                            <input asp-for="Email" type="email" class="form-control form-control-lg" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div data-mdb-input-init class="form-outline mb-4">
                            <label class="form-label" asp-for="Password">Password</label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="pt-1 mb-4">
                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-box btn-lg btn-block" type="submit">Login</button>
                        </div>
                        @* <p class="small mb-5 pb-lg-2"><a class="text-muted" href="#!">Forgot password?</a></p> *@
                        <p>Don't have an account? <a asp-controller="Physician" asp-action="Create" class="link-info">Register here</a></p>
                    </form>
                </div>
            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="~/Assets/pic.png"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>

<style>
       .btn-box {
        width: 150px;
        height: 60px;
        background-color: #ffa1af;
        border-radius: 11px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
       }

      .font {
          font-family: Montserrat;
      }
</style>