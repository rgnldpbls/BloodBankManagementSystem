@model BBMS.Models.Donor

@{
    ViewData["Title"] = "Details";
    Layout = ViewData["Layout"]?.ToString();
}

<div class="container-xl px-4 mt-4">
    <div class="col-xl-8">
        <div class="card mb-4">
            <div class="card-header">Donor Details</div>
            <div class="card-body">
                    <div class="row gx-3 mb-3">
                        <div class="col-md-6">
                            <label class="small mb-1">
                                @Html.DisplayNameFor(model => model.Name)
                            </label>
                            <input class="form-control" value=" @Html.DisplayFor(model => model.Name)" disabled/>
                        </div>
                        <div class="col-md-6">
                            <label class="small mb-1">
                                @Html.DisplayNameFor(model => model.Sex)
                            </label>
                            <input class="form-control" value="@Html.DisplayFor(model => model.Sex)" disabled/>
                        </div>
                    </div>
                    <div class="row gx-3 mb-3">
                        <div class="col-md-6">
                            <label class="small mb-1">
                                @Html.DisplayNameFor(model => model.City)
                            </label>
                            <input class="form-control" value="@Html.DisplayFor(model => model.City)" disabled />
                        </div>
                        <div class="col-md-6">
                            <label class="small mb-1">
                                @Html.DisplayNameFor(model => model.Region)
                            </label>
                            <input class="form-control" value="@Html.DisplayFor(model => model.Region)" disabled/>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="small mb-1">
                            @Html.DisplayNameFor(model => model.Birthdate)
                        </label>
                        <input class="form-control" value="@Html.DisplayFor(model => model.Birthdate)" disabled/>
                    </div>
                    <div class="mb-3">
                        <label class="small mb-1">
                            @Html.DisplayNameFor(model => model.ContactNo)
                        </label>
                        <input class="form-control" value="@Html.DisplayFor(model => model.ContactNo)" disabled/>
                    </div>
                    <div class="mb-3">
                        <label class="small mb-1">
                            @Html.DisplayNameFor(model => model.Email)
                        </label>
                        <input class="form-control" value="@Html.DisplayFor(model => model.Email)" disabled/>
                    </div>
                    <div class="mb-3">
                        <label class="small mb-1">
                            @Html.DisplayNameFor(model => model.Password)
                        </label>
                        <input class="form-control" value="@Html.DisplayFor(model => model.Password)" disabled/>
                    </div>
                    <div class="mb-3">
                        <label class="small mb-1">
                            @Html.DisplayNameFor(model => model.DateCreated)
                        </label>
                        <input class="form-control" value="@Html.DisplayFor(model => model.DateCreated)" disabled/>
                    </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        margin-top: 20px;
        background-color: #f2f6fc;
        color: #69707a;
    }

    .img-account-profile {
        height: 10rem;
    }

    .rounded-circle {
        border-radius: 50% !important;
    }

    .card {
        box-shadow: 0 0.15rem 1.75rem 0 rgb(33 40 50 / 15%);
    }

        .card .card-header {
            font-weight: 500;
        }

