@{
   ViewData["Title"] = "Register";
   Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="register-main">
    <div class="select-your-account">Select an account type to create.</div>
    <b class="welcome-user">Welcome, User!</b>
    <div class="register-donor-box">
    </div>
    <div class="donor">
        <a type="submit" class="btn Donor" asp-controller="Donor" asp-action="Create">DONOR</a>
    </div>
