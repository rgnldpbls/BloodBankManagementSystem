    </div>
    <div class="physician">
        <a type="submit" class="btn Physician" asp-controller="Physician" asp-action="Create">PHYSICIAN</a>
    </div>
    <div class="button">
        <div class="view-report">
            <a class="btn Back" asp-area="" asp-controller="Home" asp-action="Index">Back</a>
        </div>
    </div>
    <img class="rectangle-icon" alt="" src="~/Assets/pic.png">
</div>
